# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

POST    /nsi/v2/connectionProvider  controllers.ConnectionProvider.request
GET     /nsi/v2/connectionProvider  controllers.ConnectionProvider.wsdl(wsdl: String)
POST    /nsi/v2/connectionRequester controllers.ConnectionRequester.request
GET     /nsi/v2/connectionRequester controllers.ConnectionRequester.wsdl(wsdl: String)

GET     /nsi/v2/:wsdlOrXsd          controllers.SoapWebService.wsdlOrXsd(wsdlOrXsd: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
