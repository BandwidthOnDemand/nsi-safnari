# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                                    @controllers.Application.index
GET    /connections                         @controllers.Application.connections(page: Int ?= 1)
GET    /healthcheck                         @controllers.Application.healthcheck

POST   /nsi-v2/ConnectionServiceProvider    @controllers.ConnectionProvider.request
GET    /nsi-v2/ConnectionServiceProvider    @controllers.ConnectionProvider.wsdl(wsdl: String)
POST   /nsi-v2/ConnectionServiceRequester   @controllers.ConnectionRequester.request
GET    /nsi-v2/ConnectionServiceRequester   @controllers.ConnectionRequester.wsdl(wsdl: String)

GET    /nsi-v2/:wsdlOrXsd                   controllers.SoapWebService.wsdlOrXsd(wsdlOrXsd: String)

POST   /pce/reply                           controllers.PathComputationEngine.pceReply

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                        controllers.Assets.at(path="/public", file)
